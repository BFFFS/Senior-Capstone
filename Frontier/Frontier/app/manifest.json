{
  "name": "Frontier",
  "version":"1.0",
  "manifest_version": 2,
  "description": "Frontier Web Navigation Solution",

  "icons":{
	"16": "img/frontier_icon_16.png",
	"48": "img/frontier_icon_48.png",
	"128": "img/frontier_icon_128.png"
  },

  "background":{
	"page": "background.html"
  },

  "content_scripts": [
  
	{
		"matches": ["*"],
		"js": ["jquery-2.1.3.min.js", "forked_links.js"],
		"css": ["forked_links.css"],
		"html": ["forked_links.html"],
		"run_at": "document_start"
	
	}
  
  ],

  "options_page": "options.html",

  "browser_action": {
	"default_title": "Frontier",
    "default_icon": "img/frontier_icon_16.png",
  },

  "permissions": [
    "background",
	"tabs",
	"http://*/*",
	"https://*/*"
  ]
  
}