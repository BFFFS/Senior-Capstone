{
  "name": "Frontier",
  "version":"1.0",
  "manifest_version": 2,
  "description": "Frontier Web Navigation Solution",

  "icons":{
	"16": "img/frontier_icon_16.png",
	"48": "img/frontier_icon_48.png",
	"128": "img/frontier_icon_128.png"
  },

  "background":{
	"page": "background.html"
  },

  "content_scripts": [
  
	{
		"matches": ["http://*.com/*", "https://*.com/*"],
		"js": ["jquery-2.1.3.min.js","forked_links.js"],
		"css": ["forked_links.css"],
		"run_at": "document_idle"
	
	}
  
  ],

  "permissions": [
    "background",
	"history",
	"tabs",
	"http://*.com/*",
	"https://*.com/*"
  ],
  
  "web_accessible_resources": [
	"forked_links.css",
	"jquery-2.1.3.min.js",
	"forked_links.html",
	"script_imports.html"
  ],

  "options_page": "options.html",


  "browser_action": {
	"default_title": "Frontier",
    "default_icon": "img/frontier_icon_16.png"
  }
  
}